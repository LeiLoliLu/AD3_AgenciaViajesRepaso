<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.mariadb.jdbc.Driver</property>
        <property name="connection.url">jdbc:mariadb://localhost:3306/agencia</property>
        <property name="connection.username">root</property>
        <property name="connection.password">toor</property>
        <property name="dialect">org.hibernate.dialect.MariaDBDialect</property>
        <property name="hibernate.hbm2ddl.auto">none</property>
        <property name="hibernate.show_sql">true</property>
        <mapping class="org.jesuitas.models.Cliente"/>
        <mapping class="org.jesuitas.models.Catalogo"/>
        <mapping class="org.jesuitas.models.Reserva"/>
        <mapping class="org.jesuitas.models.Viaje"/>
    </session-factory>
</hibernate-configuration>